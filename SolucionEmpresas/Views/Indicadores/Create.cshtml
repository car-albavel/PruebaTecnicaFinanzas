@model SolucionEmpresas.Models.Indicadores

@{
    ViewBag.Title = "Crear Indicador";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>@ViewBag.Title</h1>
            <hr />

            @using (Html.BeginForm("Create", "Indicadores", FormMethod.Post, new { @class = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label>Empresa</label>
                    @Html.DropDownListFor(model => model.EmpresaId, (SelectList)ViewBag.Empresas, "-- Seleccione Empresa --", new { @class = "form-control", @required = "required" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Nombre)
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Descripcion)
                    @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", @rows = 3, @required = "required" })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Formula)
                    @Html.TextAreaFor(model => model.Formula, new { @class = "form-control", @rows = 3, @required = "required", @placeholder = "Ej: (Activo - Pasivo) / Patrimonio" })
                    @Html.ValidationMessageFor(model => model.Formula, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Valor)
                    @Html.TextBoxFor(model => model.Valor, new { @class = "form-control", @type = "number", @step = "0.01", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Periodo)
                    @Html.TextBoxFor(model => model.Periodo, new { @class = "form-control", @type = "month", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Periodo, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>