@model SolucionEmpresas.Models.CargasArchivos

@{
    ViewBag.Title = "Cargar Archivo Contable";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>@ViewBag.Title</h1>
            <hr />

            <div class="alert alert-info">
                <strong>Tipos de archivo permitidos:</strong> Excel (.xlsx, .xls) y PDF
            </div>

            @using (Html.BeginForm("Create", "Cargas", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label>Empresa</label>
                    <select name="empresaId" class="form-control" required>
                        <option value="">-- Seleccione Empresa --</option>
                        @foreach (var empresa in (SelectList)ViewBag.Empresas)
                        {
                            <option value="@empresa.Value">@empresa.Text</option>
                        }
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="archivo" class="form-label">Seleccionar Archivo</label>
                    <input type="file" name="archivo" class="form-control" accept=".xlsx,.xls,.pdf" required />
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Cargar Archivo</button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>