@model IEnumerable<SolucionEmpresas.Models.Empresas>

@{
    ViewBag.Title = "Gestión de Empresas";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1>@ViewBag.Title</h1>
            <hr />

            @Html.ActionLink("Crear Nueva Empresa", "Create", null, new { @class = "btn btn-primary mb-3" })

            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>NIT</th>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Teléfono</th>
                        <th>Estado</th>
                        <th>FechaCreacion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.NIT</td>
                        <td>@item.NombreEmpresa</td>
                        <td>@item.Direccion</td>
                        <td>@item.Telefono</td>
                        <td>
                            @if (item.Estado)
                            {
                                <span class="badge bg-success">Activa</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactiva</span>
                            }
                        </td>
                        <td>@item.FechaCreacion</td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.EmpresaId }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.EmpresaId }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>